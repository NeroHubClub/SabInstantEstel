local player = game.Players.LocalPlayer
local markPosition = nil
local lastPosition = nil

-- auto mark on spawn (13 studs forward)
local function setSpawnMark(character)
    local hrp = character:WaitForChild("HumanoidRootPart")
    local lookDir = hrp.CFrame.LookVector
    markPosition = hrp.Position + (lookDir * 13)
end

if player.Character then
    setSpawnMark(player.Character)
end

player.CharacterAdded:Connect(function(char)
    task.wait(0.5)
    setSpawnMark(char)
end)

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NeroInstantStealGUI"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 270)
mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 15)

local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new(
    Color3.fromRGB(60,60,60),
    Color3.fromRGB(25,25,25)
)
gradient.Parent = mainFrame

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -20, 0, 45)
title.Position = UDim2.new(0, 10, 0, 10)
title.BackgroundTransparency = 1
title.Text = "NERO INSTANT STEAL"
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextColor3 = Color3.new(1,1,1)
title.TextScaled = true
title.Parent = mainFrame

-- Creator
local creator = Instance.new("TextLabel")
creator.Size = UDim2.new(1, -20, 0, 18)
creator.Position = UDim2.new(0, 10, 1, -25)
creator.BackgroundTransparency = 1
creator.Text = "Created by: Nero"
creator.Font = Enum.Font.Gotham
creator.TextSize = 14
creator.TextColor3 = Color3.fromRGB(200,200,200)
creator.TextScaled = true
creator.Parent = mainFrame

-- INSTANT STEAL BUTTON
local instantButton = Instance.new("TextButton")
instantButton.Size = UDim2.new(0, 180, 0, 50)
instantButton.Position = UDim2.new(0.5, -90, 0, 70)
instantButton.Text = "INSTANT STEAL"
instantButton.Font = Enum.Font.GothamBold
instantButton.TextSize = 18
instantButton.TextColor3 = Color3.fromRGB(0,0,0)
instantButton.BackgroundColor3 = Color3.fromRGB(0,255,128)
instantButton.Parent = mainFrame
Instance.new("UICorner", instantButton).CornerRadius = UDim.new(0, 10)

-- FLASH STEP BUTTON
local flashButton = Instance.new("TextButton")
flashButton.Size = UDim2.new(0, 180, 0, 50)
flashButton.Position = UDim2.new(0.5, -90, 0, 140)
flashButton.Text = "FLASH STEP"
flashButton.Font = Enum.Font.GothamBold
flashButton.TextSize = 18
flashButton.TextColor3 = Color3.fromRGB(255,255,255)
flashButton.BackgroundColor3 = Color3.fromRGB(255,85,0)
flashButton.Parent = mainFrame
Instance.new("UICorner", flashButton).CornerRadius = UDim.new(0, 10)

-- INSTANT STEAL LOGIC
instantButton.MouseButton1Click:Connect(function()
    local char = player.Character
    if char and char:FindFirstChild("HumanoidRootPart") and markPosition then
        local hrp = char.HumanoidRootPart

        -- save last position
        lastPosition = hrp.CFrame

        -- tp to spawn mark
        hrp.CFrame = CFrame.new(markPosition + Vector3.new(0,3,0))

        -- blink back
        task.wait(0.4)
        if hrp then
            hrp.CFrame = lastPosition
        end
    end
end)

-- FLASH STEP (5 studs forward)
flashButton.MouseButton1Click:Connect(function()
    local char = player.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        local hrp = char.HumanoidRootPart
        hrp.CFrame = hrp.CFrame + (hrp.CFrame.LookVector * 5)
    end
end)
